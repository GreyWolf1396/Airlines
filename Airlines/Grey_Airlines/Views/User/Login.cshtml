@model Grey_Airlines.Models.AccountModel
@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm())
{

    <div class="login-box text-center">
        <fieldset>
            <legend>Sign in</legend>
            <p>@Html.ValidationSummary(true, "", new { @class = "text-center text-danger" })</p>
            <div>
                @Html.LabelFor(model => model.Login)
            </div>
            <div>
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })<br />
                @Html.ValidationMessageFor(model => model.Login)
            </div>
            <br />
            <div>
                @Html.LabelFor(model => model.Password)
            </div>
            <div>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })<br />
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <br />
            <div>
                <input type="submit" value="Log in" class="btn btn-default" />
            </div>
        </fieldset>
    </div>
}

