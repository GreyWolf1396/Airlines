@model Grey_Airlines.Models.CrewModel
<h4>Crew members</h4>
<p>@Html.ActionLink(@Model.Title, "DetailsCrew", "Crew", new { id = Model.Id }, null)</p>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Role</th>
    </tr>
    @foreach (var pilot in Model.Pilots)
    {
        <tr>
            <td>@Html.DisplayFor(item => pilot.Name)</td>
            <td>Pilot</td>
        </tr>
    }
    @foreach (var employee in Model.Employees)
    {
        <tr>
            <td>@Html.DisplayFor(item => employee.Name)</td>
            <td>@Html.DisplayFor(item => employee.EducationCategory)</td>
        </tr>
    }
</table>

